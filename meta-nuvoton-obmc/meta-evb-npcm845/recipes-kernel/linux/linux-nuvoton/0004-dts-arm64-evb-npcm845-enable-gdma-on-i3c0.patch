+++ b/arch/arm64/boot/dts/nuvoton/nuvoton-npcm845-evb.dts
@@ -351,6 +351,10 @@ &pcimbox {
 	status = "okay";
 };
 
+&gdma0 {
+	status = "okay";
+};
+
 &udc0 {
 	status = "okay";
 };
@@ -670,6 +674,8 @@ &i3c0 {
 	status = "okay";
 	i3c-scl-hz = <12500000>;
 	i2c-scl-hz = <400000>;
+	dmas = <&gdma0 0>, <&gdma0 1>;
+	dma-names = "tx", "rx";
 };
 
